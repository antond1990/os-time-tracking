{% extends 'base.html.twig' %}

{% block header_title %}{{ 'project.headlines.show'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                {{ 'project.headlines.show'|trans }}
                <span class="text-muted">#{{ project.id }}</span>
            </h3>
            <div class="card-options">
                <a href="{{ path('project_index') }}" class="btn btn-outline-dark btn-sm mr-2">
                    <i class="fe fe-chevron-left"></i>
                    {{ 'project.buttons.back'|trans }}
                </a>
                <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm">
                    <i class="fe fe-edit"></i>
                    {{ 'project.buttons.edit'|trans }}
                </a>
            </div>
        </div>
        <table class="table card-table">
            <tbody>
            <tr>
                <th>{{ 'project.columns.name'|trans }}</th>
                <td>
                    <strong>{{ project.name }}</strong>
                </td>
            </tr>
            <tr>
                <th>{{ 'project.columns.is_active'|trans }}</th>
                <td>
                    {{ include('parts/_active_badge.html.twig', {value: project.isActive}) }}
                </td>
            </tr>
            <tr>
                <th>{{ 'project.columns.budget_hours'|trans }}</th>
                <td>{{ project.budgetHours }}</td>
            </tr>
            <tr>
                <th>{{ 'project.columns.created_at'|trans }}</th>
                <td>{{ project.createdAt ? project.createdAt|date('datetime_format'|trans) : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'project.columns.updated_at'|trans }}</th>
                <td>{{ project.updatedAt ? project.updatedAt|date('datetime_format'|trans) : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
