{% extends 'base.html.twig' %}

{% block header_title %}{{ 'customer.edit.headline'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ 'customer.new.headline'|trans }}</h3>
        </div>

        <div class="card-body">
            {{ form_widget(form) }}
        </div>

        <div class="card-footer">
            <a href="{{ path('customer_index') }}" class="btn btn-outline-danger float-right">{{ 'customer.buttons.cancel'|trans }}</a>
            <button class="btn btn-primary"><i class="fe fe-save"></i> {{ 'customer.buttons.save'|trans }}</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
