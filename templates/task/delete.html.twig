{% extends 'base.html.twig' %}

{% block header_title %}{{ 'task.headlines.delete'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="card">
        <div class="card-status bg-red"></div>
        <div class="card-header">
            <h3 class="card-title">{{ 'task.headlines.delete'|trans }}</h3>
        </div>

        <div class="card-body">
            <p>{{ 'task.delete.question'|trans }}</p>
            <p>
                ID: {{ task.id }}<br />
                <strong>{{ task.name }}</strong>
            </p>
        </div>

        <div class="card-footer">
            <a href="{{ path('task_index') }}" class="btn btn-outline-danger float-right">
                {{ 'task.buttons.cancel'|trans }}
            </a>
            <button class="btn btn-danger">
                <i class="fe fe-trash"></i>
                {{ 'task.buttons.delete'|trans }}
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
